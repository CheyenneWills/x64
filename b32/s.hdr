	%define	XL	ESI
	%define	XR	EDI
	%define	WA	ECX
	%define WA_L	CL
	%define	WB	EBX
	%define WB_L    BL
	%define	WC	EDX
	%define WC_L    DL
	%define	XS	ESP
	%define	W0	EAX
	%define	W0_L	AL
	extern	_rc_
	%define AT_TRACE
%ifdef AT_TRACE
	extern	at_xl
	extern	at_xr
	extern	at_xs
	extern	at_wa
	extern	at_wb
	extern	at_wc
	extern	at_w0
	extern	at_zz
	extern at_note
	extern at_num
	extern at_note3
%endif
	global	START

	%macro	ZZZ	1
	pushf
	pushad
%ifdef AT_TRACE
	mov	dword [at_zz],%1
	mov	dword [at_xl],esi
	mov	dword [at_xr],edi
	mov	dword [at_xs],esp
	mov	dword [at_wa],ecx
	mov	dword [at_wb],ebx
	mov	dword [at_wc],edx
	mov	dword [at_w0],eax
%endif
;	push	%1
;	pop	eax
	popad
	popf
	%endmacro

